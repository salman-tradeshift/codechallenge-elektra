<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5">
        <display-name>Chat REST api</display-name>

        <context-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>WEB-INF/Spring/applicationContext.xml</param-value>
        </context-param>

        <listener>
            <listener-class>
                org.springframework.web.context.ContextLoaderListener
            </listener-class>
        </listener>

        <servlet>
            <servlet-name>jersey-serlvet</servlet-name>
            <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>

            <init-param>
                <param-name>jersey.config.server.provider.packages</param-name>
                <param-value>com.tradeshift.elektra.johannes</param-value>
            </init-param>

            <init-param>
                <param-name>javax.ws.rs.Application</param-name>
                <param-value>com.tradeshift.elektra.johannes.RESTApplication</param-value>
            </init-param>

            <init-param>
                <param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name>
                <param-value>com.tradeshift.elektra.johannes.CORSFilter</param-value>
            </init-param>

            <load-on-startup>1</load-on-startup>
        </servlet>

        <servlet-mapping>
            <servlet-name>jersey-serlvet</servlet-name>
            <url-pattern>/*</url-pattern>
        </servlet-mapping>
</web-app>